<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uci.ics.fabflixmobile"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="28" />
    <!-- This line is needed to enable HTTP connection -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >

        <!-- Need to define every activity in the AndroidManifest otherwise won't be visible -->
        <activity
            android:name="edu.uci.ics.fabflixmobile.Login"
            android:label="@string/app_name" >
            <intent-filter>

                <!-- This line sets which activity to be the home page -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.uci.ics.fabflixmobile.ListViewActivity" />
        <activity android:name="edu.uci.ics.fabflixmobile.SearchActivity" />
        <activity android:name="edu.uci.ics.fabflixmobile.SingleMovieActivity" />
        <!-- By default Android supports only HTTPS connection. To enable HTTP, the below line is needed -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>